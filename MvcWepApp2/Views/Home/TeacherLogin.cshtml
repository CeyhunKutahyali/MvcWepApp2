@{
    Layout = null;
}
<html>

<head>
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="container">
        <div class="row">

           

            @using (Html.BeginForm("TeacherLogin", "Home", FormMethod.Post))
            {
            <div class="col-md-offset-5">
                <h2><b>Eğitmen Girişi</b></h2>
                <br />
                <br />
                <br />
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    <input type="text" name="KullaniciAdi" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şifre</label>
                    <input type="password" name="Sifre" class="form-control" />
                </div>
                <button class="btn btn-primary">GİRİŞ YAP</button>
                <a href="/Home/Index" class="btn btn-success">Yönetici Girişi</a>
            </div>
            }


        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>